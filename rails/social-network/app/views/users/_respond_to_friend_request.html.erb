<div class="friend_request">
  <%= link_to "#{user.email}", user %> has sent you a friend request.
  <%= form_for friendship  do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.submit "Accept", class: "btn" %>
  <% end %>

  <%= render 'users/remove_friend', user: user %>

</div>
